@model ASPNetCoreInventory.Models.tb_Member

@{
    ViewBag.Title = "ลงทะเบียน";
    Layout = "~/Views/Shared/_Authen.cshtml";
}

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">ลงทะเบียนเข้าใช้งาน</h1>
                    </div>

                    @if (ViewBag.Message != null)
                    {
                        @Html.Raw(ViewBag.Message)
                    }

                    <form asp-action="Register" method="post">

                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <label asp-for="Member_Firstname" class="control-label"></label>
                                <input asp-for="Member_Firstname" class="form-control form-control-user">
                                <span asp-validation-for="Member_Firstname" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <label asp-for="Member_Lastname" class="control-label"></label>
                                <input asp-for="Member_Lastname" class="form-control form-control-user">
                                <span asp-validation-for="Member_Lastname" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <label asp-for="Member_Email" class="control-label"></label>
                                <input asp-for="Member_Email" class="form-control form-control-user">
                                <span asp-validation-for="Member_Email" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <label asp-for="Member_Birthdate" class="control-label"></label>
                                <input asp-for="Member_Birthdate" class="form-control form-control-user">
                                <span asp-validation-for="Member_Birthdate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <label asp-for="Member_Password" class="control-label"></label>
                                <input asp-for="Member_Password" class="form-control form-control-user">
                                <span asp-validation-for="Member_Password" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6">
                                <label asp-for="ConfirmPassword" class="control-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control form-control-user">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <input type="submit" value="Register Account" class="btn btn-primary btn-user btn-block" />
                        <hr>
                        <a href="#" class="btn btn-google btn-user btn-block">
                            <i class="fab fa-google fa-fw"></i> Register with Google
                        </a>
                        <a href="#" class="btn btn-facebook btn-user btn-block">
                            <i class="fab fa-facebook-f fa-fw"></i> Register with Facebook
                        </a>
                    </form>
                    <hr>
                    <div class="text-center">
                        @Html.ActionLink("เป็นสมาชิกอยู่แล้ว? เข้าสู่ระบบ", "Login", "Frontend", null, new { @class = "small" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>